<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="15dp"
    android:padding="16dp"
    app:cardUseCompatPadding="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/mFName"
            android:text="LESLIE"
            style="@style/AppTheme.H5"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/mTAmounts"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:text="GHâ‚µ "
            android:textSize="30sp"
            android:gravity="center"
            style="@style/AppTheme.H5"
            app:layout_constraintTop_toTopOf="@id/mFName"
            app:layout_constraintStart_toStartOf="parent"
            ></TextView>
        <TextView
            android:id="@+id/mTAmount"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="5dp"
            android:text="GHC"
            android:textSize="30sp"
            android:gravity="center"
            style="@style/AppTheme.H5"
            app:layout_constraintTop_toTopOf="@id/mFName"
            app:layout_constraintStart_toEndOf="@id/mTAmounts"
            ></TextView>


        <TextView
            android:id="@+id/mTDate"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            tools:text="@tools:sample/lorem"
            android:textSize="20sp"
            android:gravity="center"
            style="@style/AppTheme.H4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            ></TextView>




    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
